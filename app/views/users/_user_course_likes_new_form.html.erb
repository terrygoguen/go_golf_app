<%= form_with(model: @course_like, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :course_id %>

    <%= f.collection_select :course_id, Couse.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create course like", class: "btn btn-block btn-outline-secondary" %>
<% end %>
