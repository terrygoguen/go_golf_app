<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Hole Likes

    <a data-toggle="collapse" href="#user_hole_likes_new_form">
      Add hole like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.hole_likes.each do |hole_like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to hole_like, hole_like %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to hole_like, method: :delete, data: { confirm: "Do you really want to delete this hole_like" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_hole_likes_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_hole_likes_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
