      <% user.errors.full_messages_for(:longitude).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% latitude_class = "form-control" %>
    <% latitude_was_invalid = user.errors.include?(:latitude) %>

    <% if was_validated %>
      <% if latitude_was_invalid %>
        <% latitude_class << " is-invalid" %>
      <% else %>
        <% latitude_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :latitude %>
    <%= f.number_field :latitude, class: latitude_class, placeholder: "Enter latitude" %>
    <% if latitude_was_invalid %>
      <% user.errors.full_messages_for(:latitude).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
