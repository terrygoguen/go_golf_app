<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Course Likes

    <a data-toggle="collapse" href="#couse_course_likes_new_form">
      Add course like
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @couse.course_likes.each do |course_like| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to course_like, course_like %>

        <%= link_to course_like, method: :delete, data: { confirm: "Do you really want to delete this course_like" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="couse_course_likes_new_form">
        <%= render partial: "couses/couse_course_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
