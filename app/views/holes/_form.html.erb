      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% center_of_green_latitude_class = "form-control" %>
    <% center_of_green_latitude_was_invalid = hole.errors.include?(:center_of_green_latitude) %>

    <% if was_validated %>
      <% if center_of_green_latitude_was_invalid %>
        <% center_of_green_latitude_class << " is-invalid" %>
      <% else %>
        <% center_of_green_latitude_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :center_of_green_latitude %>
    <%= f.number_field :center_of_green_latitude, class: center_of_green_latitude_class, placeholder: "Enter center of green latitude" %>
    <% if center_of_green_latitude_was_invalid %>
      <% hole.errors.full_messages_for(:center_of_green_latitude).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% course_class = "form-control" %>
    <% course_was_invalid = hole.errors.include?(:course) %>

    <% if was_validated %>
      <% if course_was_invalid %>
