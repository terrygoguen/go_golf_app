    <% if was_validated %>
      <% if center_of_green_longitude_was_invalid %>
        <% center_of_green_longitude_class << " is-invalid" %>
      <% else %>
        <% center_of_green_longitude_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :center_of_green_longitude %>
    <%= f.number_field :center_of_green_longitude, class: center_of_green_longitude_class, placeholder: "Enter center of green longitude" %>
    <% if center_of_green_longitude_was_invalid %>
      <% hole.errors.full_messages_for(:center_of_green_longitude).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
