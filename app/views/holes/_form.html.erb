    <% if was_validated %>
      <% if polygon_map_was_invalid %>
        <% polygon_map_class << " is-invalid" %>
      <% else %>
        <% polygon_map_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :polygon_map %>
    <%= f.file_field :polygon_map, class: "form-control" %>
    <% if polygon_map_was_invalid %>
      <% hole.errors.full_messages_for(:polygon_map).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% center_of_green_longitude_class = "form-control" %>
