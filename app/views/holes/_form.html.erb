<% was_validated = hole.errors.any? %>

<%= form_with(model: hole, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% yardage_class = "form-control" %>
    <% yardage_was_invalid = hole.errors.include?(:yardage) %>

    <% if was_validated %>
      <% if yardage_was_invalid %>
        <% yardage_class << " is-invalid" %>
      <% else %>
        <% yardage_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :yardage %>
    <%= f.number_field :yardage, class: yardage_class, placeholder: "Enter yardage" %>
    <% if yardage_was_invalid %>
      <% hole.errors.full_messages_for(:yardage).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% par_class = "form-control" %>
    <% par_was_invalid = hole.errors.include?(:par) %>

    <% if was_validated %>
      <% if par_was_invalid %>
        <% par_class << " is-invalid" %>
      <% else %>
        <% par_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :par %>
    <%= f.number_field :par, class: par_class, placeholder: "Enter par" %>
    <% if par_was_invalid %>
      <% hole.errors.full_messages_for(:par).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% handicap_class = "form-control" %>
    <% handicap_was_invalid = hole.errors.include?(:handicap) %>

    <% if was_validated %>
      <% if handicap_was_invalid %>
        <% handicap_class << " is-invalid" %>
      <% else %>
        <% handicap_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :handicap %>
    <%= f.number_field :handicap, class: handicap_class, placeholder: "Enter handicap" %>
    <% if handicap_was_invalid %>
      <% hole.errors.full_messages_for(:handicap).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% polygon_map_class = "form-control" %>
