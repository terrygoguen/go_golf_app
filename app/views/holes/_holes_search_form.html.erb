<%= search_form_for @q, :class => collapse_search_form, :id => "holes_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :yardage, "Yardage" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :yardage_gteq, :class => "form-control", :placeholder => "Yardage greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :yardage_lteq, :class => "form-control", :placeholder => "Yardage less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :center_of_green_latitude, "Center of green latitude" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :center_of_green_latitude_gteq, :class => "form-control", :placeholder => "Center of green latitude greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :center_of_green_latitude_lteq, :class => "form-control", :placeholder => "Center of green latitude less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :center_of_green_longitude, "Center of green longitude" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :center_of_green_longitude_gteq, :class => "form-control", :placeholder => "Center of green longitude greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :center_of_green_longitude_lteq, :class => "form-control", :placeholder => "Center of green longitude less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :handicap, "Handicap" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :handicap_gteq, :class => "form-control", :placeholder => "Handicap greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :handicap_lteq, :class => "form-control", :placeholder => "Handicap less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :par, "Par" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :par_gteq, :class => "form-control", :placeholder => "Par greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :par_lteq, :class => "form-control", :placeholder => "Par less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :course_name_cont, "Course name contains" %>
    <%= f.text_field :course_name_cont, :class => "form-control", :placeholder => "Course name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "TeeBox Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='tee_boxesgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :tee_boxes_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "TeeBox Created at greater than or equal to", :data => {:target => '#tee_boxesgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#tee_boxesgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='tee_boxeslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :tee_boxes_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "TeeBox Created at less than or equal to", :data => {:target => '#tee_boxeslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#tee_boxeslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#tee_boxesgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#tee_boxeslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#tee_boxesgteqcreated_atPicker').on("dp.change", function (e) {
              $('#tee_boxeslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#tee_boxeslteqcreated_atPicker').on("dp.change", function (e) {
              $('#tee_boxesgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/holes" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#holes_filters">
  Show filters
</a>
