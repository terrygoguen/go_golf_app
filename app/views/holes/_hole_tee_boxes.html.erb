<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tee Boxes

    <a data-toggle="collapse" href="#hole_tee_boxes_new_form">
      Add tee box
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @hole.tee_boxes.each do |tee_box| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to tee_box, tee_box %>

        <%= link_to tee_box, method: :delete, data: { confirm: "Do you really want to delete this tee_box" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="hole_tee_boxes_new_form">
        <%= render partial: "holes/hole_tee_boxes_new_form" %>
      </div>
    </div>

  </ul>
</div>
