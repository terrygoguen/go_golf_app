<div class="card mb-3">
  <h2 class="card-header h4">
    Tee Box #<%= tee_box.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Hole</dt>
      <dd>
        <% if @tee_box.hole.present? %>
          <%= link_to tee_box.hole, tee_box.hole %>
        <% end %>
      </dd>

      <dt>Color</dt>
      <dd><%= tee_box.color %></dd>

      <dt>Yardage</dt>
      <dd><%= tee_box.yardage %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back tee_box, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_tee_box_url(tee_box), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to tee_box, method: :delete, data: { confirm: "Do you really want to delete this tee_box?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(tee_box.updated_at) %> ago
  </div>
</div>
